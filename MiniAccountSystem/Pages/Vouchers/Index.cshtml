@page
@model MiniAccountSystem.Pages.Vouchers.IndexModel

<h2>Saved Vouchers</h2>

<table border="1" cellpadding="5">
    <thead>
        <tr>
            <th>Voucher ID</th>
            <th>Voucher Type</th>
            <th>Date</th>
            <th>Reference No</th>
            <th>Account</th>
            <th>Debit</th>
            <th>Credit</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var v in Model.Vouchers)
        {
            <tr>
                <td>@v.VoucherId</td>
                <td>@v.VoucherType</td>
                <td>@v.VoucherDate.ToString("yyyy-MM-dd")</td>
                <td>@v.ReferenceNo</td>
                <td>@v.AccountName</td>
                <td>@v.Debit</td>
                <td>@v.Credit</td>
            </tr>
        }
    </tbody>
</table>
