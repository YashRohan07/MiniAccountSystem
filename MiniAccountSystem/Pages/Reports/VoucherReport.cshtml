@page
@model MiniAccountSystem.Pages.Reports.VoucherReportModel
@{
    ViewData["Title"] = "Voucher Report";
}

<h2>Voucher Report</h2>

<form method="get" novalidate>
    <label>From Date:</label>
    <input type="date" asp-for="FromDate" />

    <label>To Date:</label>
    <input type="date" asp-for="ToDate" />

    <label>Voucher Type:</label>
    <select asp-for="VoucherType">
        <option value="">-- All --</option>
        <option value="Journal">Journal</option>
        <option value="Payment">Payment</option>
        <option value="Receipt">Receipt</option>
    </select>

    <button type="submit">Filter</button>
    <a href="?handler=Export&FromDate=@Model.FromDate?.ToString("yyyy-MM-dd")&ToDate=@Model.ToDate?.ToString("yyyy-MM-dd")&VoucherType=@Model.VoucherType" class="btn btn-primary">Export to CSV</a>

</form>

<br />

<table border="1" cellpadding="5">
    <thead>
        <tr>
            <th>Voucher ID</th>
            <th>Voucher Type</th>
            <th>Date</th>
            <th>Reference No</th>
            <th>Account</th>
            <th>Debit</th>
            <th>Credit</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var v in Model.VoucherReport)
        {
            <tr>
                <td>@v.VoucherId</td>
                <td>@v.VoucherType</td>
                <td>@v.VoucherDate.ToString("yyyy-MM-dd")</td>
                <td>@v.ReferenceNo</td>
                <td>@v.AccountName</td>
                <td>@v.Debit</td>
                <td>@v.Credit</td>
            </tr>
        }
    </tbody>
</table>
